<h1 id="meeting-top-title">教員トップページ</h1>

<div class="box_title">保護者からのお問い合わせ</div>
<div class="box_srcollbar">
  <% @p_messages.each do |p_message| %>
    <%= p_message.created_at.to_s(:date) %>
    <%= link_to p_message.title, teacher_t_message_reply_path(@teacher, id: p_message.id) %>
    <%= "(返信済み)" if p_message.reply.present? %><br>
  <% end %>
</div>

<div id="teacher-top">
  <div id="one">
    <%= link_to  teacher_meetings_new_path(@teacher), class: "" ,id:"teacher_bt" do %>
       <i class="far fa-calendar-alt"></i>
       <div>面談日時登録</div>
    <% end %>
    <%= link_to  teacher_meetings_edit_path(@teacher), class: "",id:"teacher_bt" do %>
       <i class="far fa-clock"></i>
       <div>面談時間登録</div>

    <% end %>
  </div>
  <div id="two">
    <%= link_to teacher_meeting_index2_path(@teacher), class: "",id:"teacher_bt" do %>
      <i class="fas fa-inbox"></i>
      <div>面談返信状況確認</div>
    <% end %>
    <%= link_to documents_path(params:{teacher_id: @teacher}), class: "",id:"teacher_bt" do %>
       <i class="fas fa-book-open"></i>
       <div>提出状況確認</div>
    <% end %>
  </div>
  <div id="three">
    <%= link_to new2_document_path(params:{teacher_id: @teacher}), class: "",id:"teacher_bt" do %>
      <i class="fas fa-file-signature"></i>
      <div>入力式提出</div>
    <% end %>
    <%= link_to new_document_path(params:{teacher_id: @teacher}), class: "",id:"teacher_bt" do %>
      <i class="far fa-list-alt"></i>
      <div>選択式提出</div>
    <% end %>
  </div>
  <div id="four">
    <%= link_to new3_document_path(params:{teacher_id: @teacher}), class: "",id:"teacher_bt" do %>
      <i class="fas fa-paste"></i>
      <div>表示書類</div>
    <% end %>
    <%= link_to teacher_t_message_path(@teacher), class: "",id:"teacher_bt" do %>
      <i class="fas fa-comments"></i>
      <div>個別連絡</div>
    <% end %>
  </div>
  <div id="five">
    <%= link_to teacher_teacher_index2_path(@teacher), class: "last" do %>
    <i class="fas fa-users"></i>
    <div>保護者一覧</div>
    <% end %>
  </div>
</div>
