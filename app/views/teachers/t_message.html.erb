<h1 id="meeting-top-title">個別連絡</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @t_message, url: teacher_t_message_create_path(@teacher), local: true) do |f| %>

      <%#= fields_for @t_message do |e| %>
        <%#= e.hidden_field :t_message, :value => @t_message.id %>
      <%# end %>

      <%= f.label :title, "タイトル", class: "label-signup" %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :content, "内容", class: "label-signup" %>
      <%= f.text_area :content, class: "form-control" %>

      <%= f.label :select_user, "送信ユーザー", class: "label-signup" %>
      <%= f.select :select_user, @users_name, { include_hidden: false }, { multiple: true, class: "js-searchable form-control" } %>


      <%= f.submit "送信", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>


<script>

  $('.js-searchable').select2({
    placeholder: '送信ユーザー選択'
  });

</script>
