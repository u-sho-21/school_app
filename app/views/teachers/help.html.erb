<script>
  var btn = $('#movieMeetingBtn');
  var btn2 = $('#movieDocumentBtn');
  var btn3 = $('#movieOtherBtn');
  var count = 1;
  var count2 = 1;
  var count3 = 1;
/*面談*/
  btn.on('click',function(){
     $('#movie_meeting').slideToggle();
     if(count%2 == 0){
         btn.text('面談機能説明 ▼');
     }  
     else{
         btn.text('面談機能説明 ▲');
     }
    count++;
  });
  /*提出*/
  btn2.on('click',function(){
     $('#movie_document').slideToggle();
     if(count2%2 == 0){
         btn2.text('提出機能説明 ▼');
     }  
     else{
         btn2.text('提出機能説明 ▲');
     }
    count2++;
  });
  /*その他*/
  btn3.on('click',function(){
     $('#movie_other').slideToggle();
     if(count3%2 == 0){
         btn3.text('その他機能説明 ▼');
     }  
     else{
         btn3.text('その他機能説明 ▲');
     }
    count3++;
  });

</script>
 
